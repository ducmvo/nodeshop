<%- include('../includes/head.ejs') %>   
<%- include('../includes/navigation.ejs') %>
<div class="container mt-5">
    <h3><%=pageTitle%></h3>
</div>
<main class="container my-3" style="width: 90%; padding-right: 10%;">
    <h4>Add a Product!</h4>
    <form action="/admin/product" method="POST">
        <div class="form-group">
            <label for='title'>Title</label>
            <input class="form-control" type="text" name="title" id='title'>
        </div>
        
        <div class="form-group">
            <label for='price'>Price</label>
            <input class="form-control" type="number" step="0.01" name="price" id="price">
        </div>

        <div class="form-group">
            <label for='description'>Description</label>
            <textarea class="form-control" type="text" name="description" id='image' rows='4'></textarea>
        </div>

        <div class="form-group">
            <label for='image'>Image URL</label>
            <input class="form-control" type="text" name="image" id='image'>
        </div>
        
        <br>
        <button class="btn btn-primary" type="submit">Add Product</button>
    </form>
</main>

<%- include('../includes/end.ejs') %>