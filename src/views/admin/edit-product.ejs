<%- include('../includes/head.ejs') %>   
<%- include('../includes/navigation.ejs') %>
<div class="container mt-5">
    <h3><%=pageTitle%></h3>
</div>
<style>
  .box-container {
    display: flex;
  }
</style>
<main class="container box-container my-3" style="width: 100%;">

  <% const {onEdit} = kwargs %>
  <% if(onEdit){ %>
    <div style="width: 50%;">
      <img class="card-img-top mt-2 mx-0" style="width: 100%;" src="<%= kwargs.product.image %>" alt=" Product card">
    </div>
  <% } %>
    <div style="width: 50%;">
      <form action="/admin/<%= kwargs.onEdit?'edit-product':'add-product'%>" method="POST" class="pr-5">
        <div class="form-group">
            <label for='title'>Title</label>
            <input class="form-control" type="text" name="title" value="<%= onEdit?kwargs.product.title:''%>" id='title'>
        </div>
        
        <div class="form-group">
            <label for='price'>Price</label>
            <input class="form-control" type="number" step="0.01" name="price" value="<%= onEdit?kwargs.product.price:''%>" id="price">
        </div>

        <div class="form-group">
            <label for='description'>Description</label>
            <textarea class="form-control" type="text" name="description" id='image' rows='4'><%= onEdit?kwargs.product.description:''%></textarea>
        </div>

        <div class="form-group">
            <label for='image'>Image URL</label>
            <input class="form-control" type="text" name="image" value="<%= onEdit?kwargs.product.image:''%>" id='image'>
        </div>

        <% if(onEdit){ %>
          <input class="form-control" type="hidden" name="productId" value="<%= kwargs.product.id %>" id='image'>
        <% } %>
        
        <br>
        <button class="btn btn-primary" type="submit"><%= onEdit?"Update":"Add"%> Product</button>
    </form>
    </div>
    
</main>

<%- include('../includes/end.ejs') %>