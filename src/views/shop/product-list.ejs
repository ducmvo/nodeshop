<%- include('../includes/head.ejs') %> <%- include('../includes/navigation.ejs')
%>

<div class="container mt-5">
	<h3><%=pageTitle%></h3>
</div>
<main class="container my-3">
	<div class="card-columns">
		<% if (kwargs.products.length>0) { %> <% kwargs.products.map((product)=> {
		%>
		<div class="card my-3 product-card">
			<img
				class="card-img-top mt-2"
				src="<%= product.image %>"
				alt=" Product card"
				onerror="this.onerror=null;this.src='https://image.freepik.com/free-vector/realistic-blank-paper-coffee-bag-isolated-white-background_92916-86.jpg'"
			/>
			<div class="card-body">
				<h5 class="card-title" style="color: rgb(150, 2, 79) !important">
					<%= product.title %>
				</h5>
				<h6
					class="card-subtitle mb-2 text-muted"
					style="color: green !important"
				>
					$<%= product.price %>
				</h6>
				<p class="card-text"><%= product.description %></p>

				<a href="/products/<%=product.id%>" class="btn btn-link inline">
					Detail
				</a>
				<form action="/cart" method="POST" class="inline">
					<input type="hidden" name="productId" value="<%= product.id %>">
					<button type='submit' class="btn btn-link inline">
						Add to cart
					</button>
				</form>
			</div>
		</div>
		<% })} else { %>
		<h4>No Product Found</h4>
		<% } %>
	</div>
</main>

<%- include('../includes/end.ejs') %>
